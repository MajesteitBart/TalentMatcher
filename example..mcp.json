{
    "mcpServers": {
        "next-devtools": {
            "command": "cmd",
            "args": [
                "/c",
                "npx",
                "-y",
                "next-devtools-mcp@latest"
            ]
        },
        "chakra-ui": {
            "command": "cmd",
            "args": [
                "/c",
                "npx",
                "-y",
                 "@chakra-ui/react-mcp"
            ]
        },
        "context7": {
            "type": "http",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "YOUR_API_KEY"
            }
        },
        "playwright": {
            "command": "cmd",
            "args": [
                "/c",
                "npx",
                "@playwright/mcp@latest"
            ]
        }
    }
}